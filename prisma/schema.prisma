generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @default(uuid())
  email    String @unique
  password String
}

model Transaction {
  id                  String   @id @default(uuid())
  amount              Int
  createdAt           DateTime @default(now())
  orderId             String
  customerEmail       String
  customerName        String
  receipt             String
  status              String
  razorpay_payment_id String
  razorpay_order_id   String
  message             String
}
